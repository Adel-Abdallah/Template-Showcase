{
    "theme": "vibrant",
    "title": "POP CULTURE",
    "subtitle": "Bold & Colorful",
    "style": {
        "colors": {
            "primary": "#ff0080",
            "onPrimary": "#ffffff",
            "secondary": "#00d9ff",
            "onSecondary": "#000000",
            "background": "linear-gradient(135deg, #ff0080 0%, #7928ca 50%, #4c1d95 100%)",
            "text": "#ffffff",
            "border": "rgba(255, 255, 255, 0.2)",
            "cardBg": "rgba(0, 0, 0, 0.3)"
        },
        "typography": {
            "fontFamily": "Raleway, sans-serif",
            "headingsFamily": "Raleway, sans-serif"
        },
        "shape": {
            "borderRadius": "20px",
            "borderWidth": "1px"
        },
        "effects": {
            "shadow": "0 20px 40px rgba(0, 0, 0, 0.3), 0 10px 20px rgba(0, 0, 0, 0.2)"
        },
        "animations": true
    },
    "apiConfig": {
        "endpoint": "products/category/smartphones",
        "params": {
            "limit": 8
        }
    },
    "features": {
        "hero": true
    },
    "header": {
        "links": [
            {
                "label": "Drop",
                "href": "/universal/vibrant"
            },
            {
                "label": "Crew",
                "href": "/universal/vibrant/about"
            },
            {
                "label": "Hype",
                "href": "/universal/vibrant/contact"
            },
            {
                "label": "Sign In",
                "href": "/universal/vibrant/login"
            }
        ],
        "cartIcon": true
    },
    "footer": {
        "text": "Colors that speak louder than words.",
        "links": [
            {
                "label": "Terms",
                "href": "/universal/vibrant/terms"
            },
            {
                "label": "Privacy",
                "href": "/universal/vibrant/privacy"
            }
        ]
    }
}