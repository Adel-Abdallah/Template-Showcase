{
    "id": "crazy",
    "title": "CRAZY_MODE",
    "subtitle": "Caution: High Voltage",
    "description": "A high-octane, high-contrast black and yellow theme with aggressive animations.",
    "style": {
        "colors": {
            "primary": "#FFD700",
            "onPrimary": "#000000",
            "secondary": "#FFFFFF",
            "onSecondary": "#000000",
            "background": "#000000",
            "text": "#FFD700",
            "cardBg": "#111111",
            "border": "#FFD700",
            "accent": "#FF0055"
        },
        "typography": {
            "fontFamily": "Courier New, monospace",
            "headingsFamily": "Impact, sans-serif",
            "baseSize": "16px",
            "scaleRatio": 1.4
        },
        "shape": {
            "borderRadius": "0px",
            "borderWidth": "2px",
            "boxShadow": "8px 8px 0px #FFD700"
        },
        "animations": {
            "buttonHover": "transform: translate(-4px, -4px); box-shadow: 12px 12px 0px #FFFFFF;",
            "cardHover": "transform: scale(1.02) rotate(1deg); border-color: #FFFFFF;"
        }
    },
    "layout": {
        "spacing": {
            "sm": "1rem",
            "md": "2rem",
            "lg": "4rem"
        },
        "grid": {
            "columns": 3,
            "gap": "2rem"
        }
    },
    "header": {
        "layout": "logo-center",
        "iconPosition": "left",
        "sticky": true,
        "cartIcon": true,
        "links": [
            {
                "label": "Products",
                "href": "/universal/crazy"
            },
            {
                "label": "About",
                "href": "/universal/crazy/about"
            }
        ]
    },
    "footer": {
        "layout": "simple",
        "showSocials": true,
        "text": "WARNING: CRAZY MODE ACTIVE",
        "links": [
            {
                "label": "Terms",
                "href": "/terms"
            },
            {
                "label": "Privacy",
                "href": "/privacy"
            }
        ]
    },
    "apiConfig": {
        "endpoint": "products",
        "params": {
            "limit": 8
        }
    },
    "features": {
        "hero": true
    },
