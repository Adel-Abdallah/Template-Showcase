{
    "theme": "editorial",
    "title": "The Edit",
    "subtitle": "Stories Matter",
    "style": {
        "colors": {
            "primary": "#b91c1c",
            "onPrimary": "#ffffff",
            "secondary": "#f3f4f6",
            "onSecondary": "#1f2937",
            "background": "#fdfbf7",
            "text": "#1c1917",
            "border": "#e7e5e4",
            "cardBg": "#ffffff"
        },
        "typography": {
            "fontFamily": "Georgia, serif",
            "headingsFamily": "Georgia, serif"
        },
